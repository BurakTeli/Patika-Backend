@model YourNamespace.ViewModels.CustomerOrderViewModel

<h2>Customer Information</h2>
<table class="table">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
    </tr>
    <tr>
        <td>@Model.Customer.Id</td>
        <td>@Model.Customer.FirstName</td>
        <td>@Model.Customer.LastName</td>
        <td>@Model.Customer.Email</td>
    </tr>
</table>

<h2>Orders</h2>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
    </tr>
    @foreach (var order in Model.Orders)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.ProductName</td>
            <td>@order.Price.ToString("C")</td>
            <td>@order.Quantity</td>
            <td>@(order.Price * order.Quantity).ToString("C")</td>
        </tr>
    }
</table>
